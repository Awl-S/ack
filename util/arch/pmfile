local d = "util/arch/"

tool_aal = cprogram {
	CEXTRAFLAGS = "-DAAL",
	cfile (d.."archiver.c"),
	
	lib_print,
	lib_string,
	lib_system,
	lib_object,
	
	install = {
		pm.install("%BINDIR%bin/aal"),
		pm.install(d.."aal.1", "%BINDIR%man/man1/aal.1")
	}
}

