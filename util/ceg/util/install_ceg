CEG=../../../lib/ceg/util

case $# in
  1) case $1 in
	-as) cp $CEG/make_as ce_makefile;;
	-obj) cp $CEG/make_obj ce_makefile;;
	   *) echo wrong option $1, use -as or -obj;
     	      exit 1;;
     esac;;

  0) cp $CEG/make_own ce_makefile;;

  *) echo wrong number of arguments;
     exit 1;;
esac
make -f ce_makefile install
