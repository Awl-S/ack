var A68INIT={EM}/lib/em_a68s_init
name a68s
        from .8.a68
        to .k
        program {EM}/lib/em_a68s{w}{p}
        mapflag -PA* A68INIT=*
        args < > {SOURCE}.lst {A68INIT}{w}{p} /dev/null
        prep cond
        rts .8
        need .8
        callname a68s
end
name encode
